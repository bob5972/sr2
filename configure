#!/usr/bin/perl
## configure -- part of SpaceRobots2

use strict;
use warnings;

use FindBin qw($Bin);
use lib "$Bin/MBLib/MBPerl";

use MBBasic;
use MBBuild;

$MBBasic::PROGRAM_AUTHOR = "Michael Banack";
$MBBasic::PROGRAM_COPYRIGHT_DATE = "2022";

my $gScriptOptions = {};

sub Main() {
    MBBasic::LoadOptions($gScriptOptions, __PACKAGE__);
    MBBuild::Init();

    my $defines = {};
    my $config = {};

    my $bareOpts = $OPTIONS->{bareOptions};
    ASSERT(!defined($bareOpts) || ref($bareOpts) eq 'ARRAY');
    if (defined($bareOpts) && ArrayLen($bareOpts) > 0) {
        VERIFY(ArrayLen($bareOpts) == 1, 'Too many bareOpts');
        my $bare = $bareOpts->[0];

        if ($bare =~ /^debug|develperf|release$/) {
            $config->{'BUILDTYPE'} = $bare;
        } else {
            Panic("Unknown bare option: $bare\n");
        }
    }

    if (-f '/usr/lib64/libX11.so' ||
        -f '/usr/lib/x86_64-linux-gnu/libX11.so') {
        Console("libX11 detected: enabling GUI\n");
        $defines->{'SR2_GUI'} = TRUE;
        $defines->{'OPENGL'} = TRUE;
    } else {
        Console("libX11 NOT detected: disabling GUI\n");
        $defines->{'SR2_GUI'} = FALSE;
        $defines->{'OPENGL'} = FALSE;
    }

    # Causes floating point differences between debug/non-debug builds
    # on gcc 11.3.0
    $config->{'PROJECT_CFLAGS'} = "-fno-expensive-optimizations";

    MBBuild::Configure($config, $defines);
    MBBuild::Exit();
}

# Call the Main function.
my $exitCode;
eval {
   $exitCode = Main();
}; Panic($@) if $@;
exit $exitCode;
